<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.hpit.hotnews.entity.Reply" table="tb_reply" lazy="false">
		<id name="replyid" column="replyid" type="java.math.BigDecimal" length="5">
			<generator class="assigned"/>
		</id>
		<property name="cid" column="cid" type="java.math.BigDecimal" length="5"/>
		<property name="msg" column="msg" type="java.lang.String" length="100"/>
		<property name="rauthor" column="rauthor" type="java.lang.String" length="20"/>
		<property name="rtime" column="rtime" type="java.util.Date"/>
	</class>
</hibernate-mapping>